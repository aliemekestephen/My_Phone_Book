{% extends 'base.jinja2' %}
{% block title %}Add new contact{% endblock %}

{% block content %}

<div class="s_center">
        <form class="s_form" method="post" >
            <br/>
            <h1 class="h1_l"><i class="fas fa-user-plus"></i> Add new contact</h1>
            <br />

            <div class="s_field">
                <label for="first_name">First name</label>
                <input type="text" class="s_field" id="first_name" name="first_name">
            </div>

            <div class="s_field">
                <label for="last_name">Last name</label>
                <input type="text" class="s_field" id="last_name" name="last_name">
            </div>

            <div class="s_field">
                <label for="mobile_no">Mobile no.</label>
                <input type="tel" class="s_field" id="mobile_no" name="mobile_no" placeholder="(234) 803-503-1350">
            </div>

            <div class="s_field">
                <label for="phone_no">Phone no.</label>
                <input type="tel" class="s_field" id="phone_no" name="phone_no" placeholder="(234) 1-503-1350">
            </div>

            <div class="s_field">
                <label for="birth_date">Date of birth</label>
                <input type="date" class="s_field" id="birth_date" name="birth_date">
            </div>

            <div class="s_field">
                <label for="email">Email address</label>
                <input type="email" class="s_field" id="email" name="email">
            </div>

            <section class="member">
                <p><span class="small">By continuing, you agree to accept our <br /> <a href="#">Privacy Policy</a> & <a href="#">Terms of Service</a></span> </p>
            </section>
            <br />
            <button type="submit" class="s_submit">Submit</button>


        </form>
</div>

{% endblock %}